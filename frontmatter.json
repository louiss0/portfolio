{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.supportedFileTypes": [
    "md",
    "mdoc",
    "mdx",
    "markdown"
  ],
  "frontMatter.taxonomy.fieldGroups": [
    {
      "id": "BaseFields",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Category",
          "name": "category",
          "type": "categories",
          "singleValueAsString": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Hero Image",
          "name": "heroImage",
          "type": "image",
          "fileExtensions": [
            "jpg",
            "jpeg",
            "png",
            "avif"
          ],
          "isPreviewImage": true
        },
        {
          "title": "Created Date",
          "name": "createDate",
          "type": "datetime",
          "default": "{{now}}",
          "dateFormat": "YYYY-MM-DD"
        },
        {
          "title": "Publishing date",
          "name": "pubDate",
          "type": "datetime",
          "when": {
            "fieldRef": "draft",
            "operator": "neq",
            "value": true
          },
          "dateFormat": "YYYY-MM-DD",
          "isPublishDate": true
        },
        {
          "title": "Updated date",
          "name": "updateDate",
          "type": "datetime",
          "required": false,
          "when": {
            "fieldRef": "pubDate",
            "operator": "neq",
            "value": "null"
          },
          "dateFormat": "YYYY-MM-DD",
          "isModifiedDate": true
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "boolean",
          "default": true
        },
        {
          "title": "Part ",
          "name": "part",
          "type": "number",
          "when": {
            "fieldRef": "category",
            "operator": "eq",
            "value": "Segment"
          }
        }
      ]
    }
  ],
  "frontMatter.projects": [
    {
      "name": "blog",
      "default": true,
      "configuration": {
        "frontMatter.content.supportedFileTypes": [
          "md",
          "mdoc",
          "markdown"
        ],
        "frontMatter.taxonomy.categories": [
          "Segment",
          "Standalone",
          "Tutorial"
        ],
        "frontMatter.content.defaultFileType": "mdoc",
        "frontMatter.templates.enabled": true,
        "frontMatter.content.publicFolder": {
          "path": "[[workspace]]/apps/blog/src/assets",
          "relative": true
        },
        "frontMatter.taxonomy.contentTypes": [
          {
            "name": "astro",
            "pageBundle": false,
            "fields": [
              {
                "type": "fieldCollection",
                "fieldGroup": "BaseFields",
                "name": "fieldCollection"
              },
              {
                "title": "Tags",
                "name": "tags",
                "type": "tags",
                "default": [
                  "astro"
                ]
              }
            ]
          },
          {
            "name": "vue",
            "pageBundle": false,
            "fields": [
              {
                "type": "fieldCollection",
                "fieldGroup": "BaseFields",
                "name": "fieldCollection"
              },
              {
                "title": "Tags",
                "name": "tags",
                "type": "tags",
                "default": [
                  "vue"
                ]
              }
            ]
          },
          {
            "name": "react",
            "pageBundle": false,
            "fields": [
              {
                "type": "fieldCollection",
                "fieldGroup": "BaseFields",
                "name": "fieldCollection"
              },
              {
                "title": "Tags",
                "name": "tags",
                "type": "tags",
                "default": [
                  "react"
                ]
              }
            ]
          },
          {
            "name": "html",
            "pageBundle": false,
            "fields": [
              {
                "type": "fieldCollection",
                "fieldGroup": "BaseFields",
                "name": "fieldCollection"
              },
              {
                "title": "Tags",
                "name": "tags",
                "type": "tags",
                "default": [
                  "HTML"
                ]
              }
            ]
          },
          {
            "name": "css",
            "pageBundle": false,
            "fields": [
              {
                "type": "fieldCollection",
                "fieldGroup": "BaseFields",
                "name": "fieldCollection"
              },
              {
                "title": "Tags",
                "name": "tags",
                "type": "tags",
                "default": [
                  "CSS"
                ]
              }
            ]
          },
          {
            "name": "typescript",
            "pageBundle": false,
            "fields": [
              {
                "type": "fieldCollection",
                "fieldGroup": "BaseFields",
                "name": "fieldCollection"
              },
              {
                "title": "Tags",
                "name": "tags",
                "type": "tags",
                "default": [
                  "typescript"
                ]
              }
            ]
          },
          {
            "name": "web-development",
            "pageBundle": false,
            "fields": [
              {
                "type": "fieldCollection",
                "fieldGroup": "BaseFields",
                "name": "fieldCollection"
              },
              {
                "title": "Tags",
                "name": "tags",
                "type": "tags",
                "default": [
                  "web-development"
                ]
              }
            ]
          },
          {
            "name": "food-for-thought",
            "pageBundle": false,
            "fields": [
              {
                "type": "fieldCollection",
                "fieldGroup": "BaseFields",
                "name": "fieldCollection"
              }
            ]
          }
        ],
        "frontMatter.content.pageFolders": [
          {
            "title": "astro",
            "path": "[[workspace]]/apps/blog/src/content/astro",
            "contentTypes": [
              "astro"
            ]
          },
          {
            "title": "typescript",
            "path": "[[workspace]]/apps/blog/src/content/typescript",
            "contentTypes": [
              "typescript"
            ]
          },
          {
            "title": "css",
            "path": "[[workspace]]/apps/blog/src/content/css",
            "contentTypes": [
              "css"
            ]
          },
          {
            "title": "html",
            "path": "[[workspace]]/apps/blog/src/content/html",
            "contentTypes": [
              "html"
            ]
          },
          {
            "title": "food-for-thought",
            "path": "[[workspace]]/apps/blog/src/content/food-for-thought",
            "contentTypes": [
              "food-for-thought"
            ]
          },
          {
            "title": "react",
            "path": "[[workspace]]/apps/blog/src/content/react",
            "contentTypes": [
              "react"
            ]
          },
          {
            "title": "vue",
            "path": "[[workspace]]/apps/blog/src/content/vue",
            "contentTypes": [
              "vue"
            ]
          },
          {
            "title": "web-development",
            "path": "[[workspace]]/apps/blog/src/content/web-development",
            "contentTypes": [
              "web-development"
            ]
          }
        ]
      }
    },
    {
      "name": "portfolio",
      "configuration": {
        "frontMatter.content.publicFolder": "[[workspace]]/apps/portfolio/public/assets",
        "frontMatter.taxonomy.contentTypes": [
          {
            "name": "project",
            "pageBundle": false,
            "fields": [
              {
                "title": "Title",
                "name": "title",
                "type": "string"
              },
              {
                "title": "Category",
                "name": "category",
                "type": "choice",
                "choices": [
                  "Segment",
                  "Standalone",
                  "Tutorial"
                ]
              },
              {
                "title": "Description",
                "name": "description",
                "type": "string"
              },
              {
                "title": "Hero Image",
                "name": "heroImage",
                "type": "image",
                "fileExtensions": [
                  "jpg",
                  "jpeg",
                  "png",
                  "avif"
                ],
                "isPreviewImage": true
              },
              {
                "title": "Created Date",
                "name": "createDate",
                "type": "datetime",
                "default": "{{now}}",
                "dateFormat": "YYYY-MM-DD"
              },
              {
                "title": "Publishing date",
                "name": "pubDate",
                "type": "datetime",
                "when": {
                  "fieldRef": "draft",
                  "operator": "neq",
                  "value": true
                },
                "dateFormat": "YYYY-MM-DD",
                "isPublishDate": true
              },
              {
                "title": "Updated date",
                "name": "updateDate",
                "type": "datetime",
                "required": false,
                "when": {
                  "fieldRef": "pubDate",
                  "operator": "neq",
                  "value": "null"
                },
                "dateFormat": "YYYY-MM-DD",
                "isModifiedDate": true
              },
              {
                "title": "Is in draft",
                "name": "draft",
                "type": "boolean",
                "default": true
              },
              {
                "title": "Part ",
                "name": "part",
                "type": "number",
                "when": {
                  "fieldRef": "category",
                  "operator": "eq",
                  "value": "Segment"
                }
              }
            ]
          }
        ],
        "frontMatter.content.pageFolders": [
          {
            "title": "project",
            "path": "[[workspace]]/apps/portfolio/src/content/project",
            "contentTypes": [
              "project"
            ]
          }
        ]
      }
    }
  ]
}